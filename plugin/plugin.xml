<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="de.unisb.cs.depend.ccs_sem.plugin.views.CCS_category"
            name="CCS">
      </category>
      <view
            allowMultiple="false"
            category="de.unisb.cs.depend.ccs_sem.plugin.views.CCS_category"
            class="de.unisb.cs.depend.ccs_sem.plugin.views.CCSGraphView"
            icon="resources/icons/ccs.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.views.CCSGraphView"
            name="CCS Graph">
      </view>
      <view
            allowMultiple="false"
            category="de.unisb.cs.depend.ccs_sem.plugin.views.CCS_category"
            class="de.unisb.cs.depend.ccs_sem.plugin.views.StepByStepTraverseView"
            icon="resources/icons/stepByStepView.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.views.StepByStepTraverseView"
            name="Step by step traverse">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.unisb.cs.depend.ccs_sem.plugin.perspectives.CCSPerspective"
            fixed="false"
            icon="resources/icons/ccs.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.perspectives.CCSPerspective"
            name="CCS">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.unisb.cs.depend.ccs_sem.plugin.editors.CCSEditor"
            contributorClass="de.unisb.cs.depend.ccs_sem.plugin.editors.CCSEditorActionContributor"
            extensions="ccs"
            icon="resources/icons/ccs_file.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.editors.CCSEditor"
            name="CCS Editor"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="de.unisb.cs.depend.ccs_sem.plugin.CCS_category"
            name="CCS">
      </category>
      <wizard
            category="de.unisb.cs.depend.ccs_sem.plugin.CCS_category"
            class="de.unisb.cs.depend.ccs_sem.plugin.wizards.NewCCSFileWizard"
            hasPages="true"
            icon="resources/icons/ccs_file.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.wizards.NewCCSFileWizard"
            name="CCS File"
            project="false">
      </wizard>
      <wizard
            category="de.unisb.cs.depend.ccs_sem.plugin.CCS_category"
            class="de.unisb.cs.depend.ccs_sem.plugin.wizards.NewCCSProjectWizard"
            hasPages="true"
            icon="resources/icons/ccs.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.wizards.NewCCSProjectWizard"
            name="CCS Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="de.unisb.cs.depend.ccs_sem.plugin.views.CCSGraphView.Contribution"
            targetID="de.unisb.cs.depend.ccs_sem.plugin.views.CCSGraphView">
         <action
               class="de.unisb.cs.depend.ccs_sem.plugin.actions.Evaluate"
               disabledIcon="resources/icons/refresh_dis.gif"
               icon="resources/icons/refresh.gif"
               id="de.unisb.cs.depend.ccs_sem.plugin.views.CCSGraphView.actions.refresh"
               label="Evaluate"
               menubarPath="graphFunctions"
               toolbarPath="graphFunctions"
               tooltip="Evaluate (refresh this graph and other informations)">
         </action>
         <action
               class="de.unisb.cs.depend.ccs_sem.plugin.actions.StepByStepTraverse"
               disabledIcon="resources/icons/step_dis.gif"
               icon="resources/icons/step.gif"
               id="de.unisb.cs.depend.ccs_sem.plugin.views.CCSGraphView.actions.stepByStepTraverse"
               label="Step by step traverse"
               menubarPath="graphFunctions"
               toolbarPath="graphFunctions"
               tooltip="Step by step traverse">
         </action>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="de.unisb.cs.depend.ccs_sem.plugin.editors.CCSEditor.editorActions"
            targetID="de.unisb.cs.depend.ccs_sem.plugin.editors.CCSEditor">
         <action
               class="de.unisb.cs.depend.ccs_sem.plugin.actions.ShowGraph"
               disabledIcon="resources/icons/refresh_dis.gif"
               icon="resources/icons/refresh.gif"
               id="de.unisb.cs.depend.ccs_sem.plugin.actions.ShowGraphAction"
               label="Evaluate"
               menubarPath="ccsMenu/ccsGroup"
               style="push"
               toolbarPath="ccsGroup"
               tooltip="Evaluate (opens the Graph view)">
         </action>
         <action
               class="de.unisb.cs.depend.ccs_sem.plugin.actions.StepByStepTraverse"
               disabledIcon="resources/icons/step_dis.gif"
               icon="resources/icons/step.gif"
               id="de.unisb.cs.depend.ccs_sem.plugin.actions.StepByStepTraverse"
               label="Step by step traverse"
               menubarPath="ccsMenu/ccsGroup"
               style="push"
               toolbarPath="ccsGroup"
               tooltip="Step by step traverse">
         </action>
         <menu
               id="ccsMenu"
               label="&amp;CCS">
            <groupMarker
                  name="ccsGroup">
            </groupMarker>
            <groupMarker
                  name="exportGroup">
            </groupMarker>
         </menu>
         <menu
               id="ccsExportMenu"
               label="Export"
               path="/ccsMenu/exportGroup">
            <groupMarker
                  name="group1">
            </groupMarker>
         </menu>
         <action
               class="de.unisb.cs.depend.ccs_sem.plugin.actions.ExportToDotFile"
               definitionId="de.unisb.cs.depend.ccs_sem.plugin.commands.exportToDotFile"
               id="de.unisb.cs.depend.ccs_sem.plugin.actions.exportToDotFile"
               label="Export to Dot File"
               menubarPath="ccsMenu/exportGroup"
               style="push">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="de.unisb.cs.depend.ccs_sem.plugin.preferencePage.CCSPreferencePage"
            id="de.unisb.cs.depend.ccs_sem.plugin.preferencePage.CCSPreferencePage"
            name="CCS">
      </page>
   </extension>
   <extension
         id="de.unisb.cs.depend.ccs_sem.ccsproblemmarker"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         id="de.unisb.cs.depend.ccs_sem.plugin.ccsBuilder"
         name="CCS Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="de.unisb.cs.depend.ccs_sem.plugin.builder.CCSBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="de.unisb.cs.depend.ccs_sem.plugin.ccsNature"
         name="CCS Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="de.unisb.cs.depend.ccs_sem.plugin.builder.CCSNature">
         </run>
      </runtime>
      <builder
            id="de.unisb.cs.depend.ccs_sem.plugin.ccsBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="de.unisb.cs.depend.ccs_sem.plugin.ccsRessourceCreationActionSet"
            label="CCS Resource Creation Actionset"
            visible="false">
         <action
               class="de.unisb.cs.depend.ccs_sem.plugin.actions.NewCCSFile"
               icon="resources/icons/ccs_file.gif"
               id="de.unisb.cs.depend.ccs_sem.plugin.newCCSFileAction"
               label="New CCS File"
               style="pulldown"
               toolbarPath="CCS/NewCCSFile"
               tooltip="Create a new CCS File">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:de.unisb.cs.depend.ccs_sem.plugin.views.CCSGraphView?after=additions">
         <menu
               id="ccsExport"
               label="Export">
            <command
                  commandId="de.unisb.cs.depend.ccs_sem.plugin.commands.exportToDotFile"
                  id="ExportToDotFile"
                  mnemonic="d">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.unisb.cs.depend.ccs_sem.plugin.commandCategories.export"
            defaultHandler="de.unisb.cs.depend.ccs_sem.plugin.commands.ExportToDotFile"
            id="de.unisb.cs.depend.ccs_sem.plugin.commands.exportToDotFile"
            name="Export to Dot File">
      </command>
      <category
            id="de.unisb.cs.depend.ccs_sem.plugin.commandCategories.export"
            name="CCS Exporters">
      </category>
   </extension>


</plugin>
