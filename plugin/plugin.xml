<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="de.unisb.cs.depend.ccs_sem.plugin.views.CSS_category"
            name="CCS">
      </category>
      <view
            category="de.unisb.cs.depend.ccs_sem.plugin.views.CSS_category"
            class="de.unisb.cs.depend.ccs_sem.plugin.views.CCSEditorView"
            icon="icons/sample.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.views.CCSEditorView"
            name="CCS Editor">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="de.unisb.cs.depend.ccs_sem.plugin.views.CCSEditorView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.unisb.cs.depend.ccs_sem.plugin.perspectives.CCSPerspective"
            icon="icons/sample.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.perspectives.CCSPerspective"
            name="de.unisb.cs.depend.ccs_sem.plugin.perspectives.CCSPerspective">
      </perspective>
   </extension>


</plugin>
