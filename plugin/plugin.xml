<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="de.unisb.cs.depend.ccs_sem.plugin.views.CSS_category"
            name="CCS">
      </category>
      <view
            category="de.unisb.cs.depend.ccs_sem.plugin.views.CSS_category"
            class="de.unisb.cs.depend.ccs_sem.plugin.views.CCSEditorView"
            icon="icons/sample.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.views.CCSEditorView"
            name="CCS Editor">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="de.unisb.cs.depend.ccs_sem.plugin.views.CCSEditorView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.unisb.cs.depend.ccs_sem.plugin.perspectives.CCSPerspective"
            icon="icons/sample.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.perspectives.CCSPerspective"
            name="de.unisb.cs.depend.ccs_sem.plugin.perspectives.CCSPerspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.unisb.cs.depend.ccs_sem.plugin.editors.CCSEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="ccs"
            icon="icons/sample.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.editors.CCSEditor"
            name="CCS Editor"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="de.unisb.cs.depend.ccs_sem.plugin.CCS_category"
            name="CCS">
      </category>
      <wizard
            category="de.unisb.cs.depend.ccs_sem.plugin.CCS_category"
            class="de.unisb.cs.depend.ccs_sem.plugin.wizards.NewCCSFileWizard"
            hasPages="true"
            icon="icons/sample.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.wizards.NewCCSFileWizard"
            name="CCS File"
            project="false">
      </wizard>
      <wizard
            category="de.unisb.cs.depend.ccs_sem.plugin.CCS_category"
            class="de.unisb.cs.depend.ccs_sem.plugin.wizards.NewCCSProjectWizard"
            finalPerspective="de.unisb.cs.depend.ccs_sem.plugin.perspectives.CCSPerspective"
            hasPages="true"
            icon="icons/sample.gif"
            id="de.unisb.cs.depend.ccs_sem.plugin.wizards.NewCCSProjectWizard"
            name="CCS Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="de.unisb.cs.depend.ccs_sem.plugin.actionSet"
            label="CCS Action Set"
            visible="true">
         <menu
               id="ccsMenu"
               label="CCS &amp;Menu">
            <separator
                  name="ccsGroup">
            </separator>
         </menu>
         <action
               class="de.unisb.cs.depend.ccs_sem.plugin.actions.CCSAction"
               icon="icons/sample.gif"
               id="de.unisb.cs.depend.ccs_sem.plugin.actions.CCSAction"
               label="&amp;Sample Action"
               menubarPath="ccsMenu/ccsGroup"
               style="push"
               toolbarPath="ccsGroup"
               tooltip="Hello, Eclipse world">
         </action>
         <action
               class="de.unisb.cs.depend.ccs_sem.plugin.actions.OpenCCSFile"
               icon="icons/sample.gif"
               id="de.unisb.cs.depend.ccs_sem.plugin.actions.OpenCCSFileAction"
               label="&amp;Open File"
               menubarPath="ccsMenu/ccsGroup"
               style="push"
               toolbarPath="ccsGroup"
               tooltip="Open a ccs file">
         </action>
      </actionSet>
   </extension>


</plugin>
